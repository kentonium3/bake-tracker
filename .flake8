[flake8]
# Flake8 configuration for Seasonal Baking Tracker

# Maximum line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .tox,
    venv,
    build,
    dist,
    *.egg-info,
    data

# Ignore specific errors/warnings
ignore =
    E203,  # whitespace before ':' (conflicts with black)
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (conflicts with black)

# Maximum complexity
max-complexity = 10

# Show source code for errors
show-source = true

# Count errors
count = true

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    src/tests/*:F401,F811
