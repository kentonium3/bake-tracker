{
  // NOTE: This repo is primarily developed on macOS/Linux. Windows users can override
  // this in their User settings (or create a per-user workspace override).
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python3",
  "python.terminal.activateEnvironment": true,

  // Terminal reliability (Cursor/VS Code)
  // Force a known-good, system-provided shell for macOS to reduce terminal/agent flakiness.
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "/bin/bash"
    }
  },

  // Linting
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${workspaceFolder}/venv/bin/flake8",
  "python.linting.pylintEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "${workspaceFolder}/venv/bin/mypy",

  // Formatting
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "${workspaceFolder}/venv/bin/black",
  "editor.formatOnSave": true,

  // Testing
  "python.testing.pytestEnabled": true,
  "python.testing.pytestPath": "${workspaceFolder}/venv/bin/pytest",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "src/tests",
    "-v"
  ],

  // Editor
  "editor.rulers": [100],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.encoding": "utf8",
  "files.eol": "\n",

  // File exclusions
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    ".pytest_cache": true,
    "*.egg-info": true
  },

  // Search exclusions
  "search.exclude": {
    "**/venv": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/data/*.db": true
  },

  // File associations
  "files.associations": {
    "*.ini": "ini",
    ".flake8": "ini",
    ".editorconfig": "editorconfig"
  }
}
